<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.WinnipegHistoricalSites">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>


    </style>
    <style name="titleText" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="mainText" parent="AppTheme">
        <item name="android:textSize">16sp</item>

    </style>
    <style name="subText" parent="AppTheme">
        <item name="android:textSize">14sp</item>

    </style>

    <style name="DialogBoxTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/black</item>
    </style>



    <style name="buttonTheme" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="searchDropDown" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:padding">5dp</item>
    </style>






</resources>